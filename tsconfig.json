{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es5", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "cypress/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*", "gravity-chrome-extension"]
}
