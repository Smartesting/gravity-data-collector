{
    "name": "Gravity Chrome Extension",
    "description": "This extension is made for quick Gravity experiments",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}